# 환경 설정
NODE_ENV=production

# 서버 설정
PORT=3000

# 데이터베이스 URL (배포 시 실제 URL로 변경)
DATABASE_URL=postgresql://username:password@localhost:5432/dongbaejul?schema=public

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-at-least-256-bits-long
JWT_EXPIRES_IN=7d

# CORS 설정
FRONTEND_URL=https://your-frontend-domain.com

# 파일 업로드 설정
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Band API 설정 (실제 값으로 변경)
BAND_CLIENT_ID=your-band-client-id
BAND_CLIENT_SECRET=your-band-client-secret
BAND_REDIRECT_URI=https://your-api-domain.com/auth/band/callback

# 이메일 설정 (선택사항)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis 설정 (캐싱용, 선택사항)
REDIS_URL=redis://localhost:6379

# AWS S3 설정 (파일 업로드용, 선택사항)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=dongbaejul-uploads

# 로깅 레벨
LOG_LEVEL=info
